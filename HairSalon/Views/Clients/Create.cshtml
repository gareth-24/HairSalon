@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Add a new Client</h3>
<hr>

<p><strong>NOTE:</strong> You need to have at least one stylist in the system before you can add a client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>
<hr><br>

@* <h5>Add a new client</h5> *@

@using (Html.BeginForm())
{
  <div>
    @Html.LabelFor(model => model.ClientName, "Client Name:")<br>
    @Html.TextBoxFor(model => model.ClientName)<br>
  </div>
  <div>
    @Html.LabelFor(model => model.Description, "Description:")<br>
    @Html.TextAreaFor(model => model.Description)<br>
  </div>
  <div>
    @Html.LabelFor(model => model.Stylist)<br>
    @Html.DropDownList("StylistId")<br>
  </div>

  <input type="submit" value="Add new client" class="btn btn-primary" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>