@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Edit Client</h3>
<hr><br>

<h5>Edit this client: @Html.DisplayFor(model => model.ClientName)</h5>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  
  <div class="mb-3">
    @Html.LabelFor(model => model.ClientName, "Client Name:", new { @class="form-label"})
    @Html.TextBoxFor(model => model.ClientName, new { @class="form-control"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Description, "Description:", new { @class="form-label"})
    @Html.TextAreaFor(model => model.Description, new { @class="form-control"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Stylist, new { @class="form-label"})
    @Html.DropDownList("StylistId")
  </div><br>

  <input type="submit" value="save" class="btn btn-primary" />
}