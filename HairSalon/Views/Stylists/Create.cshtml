@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Add a new Stylist</h3>
<hr>
@using (Html.BeginForm())
{
  <div class="mb-3">
    @Html.LabelFor(model => model.StylistName, "Name", new { @class="form-label"})
    @Html.TextBoxFor(model => model.StylistName, new { @class="form-control"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.YearsEmployed, "Years Employed", new { @class="form-label"})
    @Html.TextBoxFor(model => model.YearsEmployed, new { @class="form-control", type="number"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Specialties, new { @class="form-label"})
    @Html.TextAreaFor(model => model.Specialties, new { @class="form-control"})
  </div><br>

  <input type="submit" value="Add new stylist" class="btn btn-primary"/>
}

<br>
<p>@Html.ActionLink("Show all Stylists", "Index")</p>