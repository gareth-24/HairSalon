@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr>
<h3>@Html.DisplayFor(model => model.StylistName)</h3>
<ul>
  <li>Years Employed: @Html.DisplayFor(model => model.YearsEmployed)</li>
  <li>Specialties: @Html.DisplayFor(model => model.Specialties)</li>
</ul>

@if (@Model.Clients.Count == 0)
{
  <h5>No clients have been added to this stylist yet!</h5>
}
else
{
  <h5>Clients:</h5>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>