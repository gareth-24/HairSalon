@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h3>Stylists</h3>
<hr/>
@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>